<subsystem xmlns="urn:jboss:domain:security:1.2">
            <security-domains>
            ...
                <security-domain name="hj_security">
                    <authentication>
                        <login-module code="Database" flag="required">
                            <module-option name="unauthenticatedIdentity" value="GUEST"/>
                            <module-option name="dsJndiName" value="java:/laborDS"/>
                            <module-option name="principalsQuery" value="SELECT password FROM customer WHERE username=?"/>
                            <module-option name="rolesQuery" value="select role, 'Roles' from customer where username=?"/>
                        </login-module>
                    </authentication>
                </security-domain>
            </security-domains>
        </subsystem>
        
